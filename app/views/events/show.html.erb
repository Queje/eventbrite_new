<div class="card">
  <div class="card-body text-center">

    <p id="notice"><%= notice %></p>

    <div>
      <%if current_user == @event.admin%>  
        <%= link_to 'Edit', edit_event_path(@event), class:'btn btn-success btn-sm' %>
        <%= link_to 'Delete', event_path, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-sm' %>
      <%end%>
        <%= link_to 'Back', events_path, class:'btn btn-secondary btn-sm'%>
    </div>

    </br>

    <p>
      <strong>Créateur:</strong>
      <%= @event.admin.email %>
    </p>

    <p>
      <strong>Start date:</strong>
      <%= @event.start_date %>
    </p>

    <p>
      <strong>Duration:</strong>
      <%= @event.duration %>
    </p>

    <p>
      <strong>Title:</strong>
      <%= @event.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @event.description %>
    </p>

    <p>
      <strong>Price (€):</strong>
      <%= @event.price %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= @event.location %>
    </p>

    </br>

    <div>
      <%= link_to 'Participez!', new_event_participation_path(@event), class:'btn btn-warning' %>
    </div>

  </div>
</div>